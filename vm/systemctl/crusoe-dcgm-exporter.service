[Unit]
Description=Crusoe DCGM Exporter
After=docker.service
Requires=docker.service

[Service]
Type=simple
TimeoutStartSec=0
Restart=always
WorkingDirectory=/etc/crusoe/telemetry_agent
ExecStart=/usr/bin/docker compose -f /etc/crusoe/telemetry_agent/docker-compose-dcgm-exporter.yaml up
ExecStop=/usr/bin/docker compose -f /etc/crusoe/telemetry_agent/docker-compose-dcgm-exporter.yaml down

[Install]
WantedBy=multi-user.target