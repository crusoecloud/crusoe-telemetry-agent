[Unit]
Description=Crusoe AMD Device Metrics Exporter
After=docker.service
Requires=docker.service

[Service]
Type=simple
TimeoutStartSec=0
Restart=always
WorkingDirectory=/etc/crusoe/telemetry_agent
ExecStart=/usr/bin/docker compose -f /etc/crusoe/telemetry_agent/docker-compose-amd-exporter.yaml up
ExecStop=/usr/bin/docker compose -f /etc/crusoe/telemetry_agent/docker-compose-amd-exporter.yaml down

[Install]
WantedBy=multi-user.target
